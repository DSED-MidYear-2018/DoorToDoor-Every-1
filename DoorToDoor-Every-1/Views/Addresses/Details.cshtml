@model DoorToDoor_Every_1.Models.Address

@{
    ViewData["Title"] = "Details";
    ViewData["Header"] = "Address Details";
}
<div class="col-md-12">
    <div class="col-md-6">
        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Unit)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Unit)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StreetNumber)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StreetNumber)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.StreetName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.StreetName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Suburb)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Suburb)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.City)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Postcode)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Postcode)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.DoorAnswered)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DoorAnswered)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Interested)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Interested)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Notes)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Visited)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Visited)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FollowUp)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FollowUp)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            @if (Model.DoorAnswered != true)
            {
                <a asp-action="NotHome">Back to List</a>
            }
            @if (Model.DoorAnswered && Model.Interested != true)
            {
                <a asp-action="NotInterested">Back to List</a>
            }
            @if (Model.DoorAnswered && Model.Interested && Model.FollowUp != true)
            {
                <a asp-action="Interested">Back to List</a>
            }
            @if (Model.DoorAnswered && Model.Interested && Model.FollowUp)
            {
                <a asp-action="FollowUp">Back to List</a>
            }

        </div>
    </div>
    <div class="col-md-6">
        @if (Model.Interested)
        {
            <h4>Contacts</h4>
            <div>
                <a asp-area="" asp-controller="Contacts" asp-action="Index">View Contacts</a> |
                <a asp-area="" asp-controller="Contacts" asp-action="Create">Create New Contact</a>
            </div>
        }

        @if (Model.FollowUp)
        {
            <hr />
            <h4>Follow Ups</h4>
            <div>
                <a asp-area="" asp-controller="FollowUps" asp-action="Index">View Follow Ups</a> |
                <a asp-area="" asp-controller="FollowUps" asp-action="Create">Create New Follow Up</a>
            </div>
        }
    </div>
</div>


<div class="clear"></div>


